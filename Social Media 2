package snippet;

import java.util.HashSet;
import java.util.Set;

public class User {
	String name;
	Set<String> intrests = null;
	
	User(String name)
	{
		this.name = name;
		this.intrests = new HashSet<String>();
	}
	
	public String toString()
	{
		return this.intrests.toString();
	}
	
}
-------------
package snippet;

import java.util.HashSet;
import java.util.Scanner;

public class Executor {
	static HashSet<User> database = new HashSet<User>();
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		while(true)
		{
			System.out.println("1.Add user\n2.Add Intrest\n3.Re\n4.Com\n5.Exit");
			switch(Integer.parseInt(sc.nextLine()))
			{
			case 1:
				addnewuser(sc);
				break;
			case 2:
				addintrest(sc);
				break;
			case 3:
				removeIntrest(sc);
				break;
			case 4:
				recommdations(sc);
				break;
			case 5:
				sc.close();
				System.exit(0);
			case 6:
				showUsers();
				break;
			}
		}
	}
	private static void recommdations(Scanner sc) {
		System.out.println("Enter User 1 Name: ");
		String user1 = sc.nextLine();
		System.out.println("Enter User 2: Name: ");
		String user2 = sc.nextLine();
		User u1 = null,u2 = null;
		HashSet<String> common = new HashSet<String>();
		for(User temp : database)
		{
			if(temp.name.equalsIgnoreCase(user1))
				u1 = temp;
			if(temp.name.equalsIgnoreCase(user2))
				u2 = temp;
		}
		for(String temp : u1.intrests)
		{
			if(u2.intrests.contains(temp))
				common.add(temp);
		}
		if(common.size()>1)
			System.out.println(common.toString()+"\tRecommdation : Yes");
		else
			System.out.println(common.toString()+"\tRecommdation: No");
	}
	private static void showUsers()
	{
		for(User temp : database)
		{
			System.out.println(temp.toString());
		}
	}
	private static void removeIntrest(Scanner sc) {
		System.out.println("Enter User Name: ");
		String username = sc.nextLine();
		for(User temp:database)
		{
			if(temp.name.equalsIgnoreCase(username))
			{
				System.out.println("Enter Hob:: ");
				String hob = sc.nextLine();
				if(!temp.intrests.remove(hob))
				{
					System.out.println("Intrest not Found");
					return;
				}
				return;
			}
		}
	}

	private static void addintrest(Scanner sc) {
		System.out.println("Enter User Name: ");
		String username = sc.nextLine();
		for(User temp:database)
		{
			if(temp.name.equalsIgnoreCase(username))
			{
				System.out.println("Add Intrest");
				String hob = sc.nextLine();
				if(!temp.intrests.add(hob)) {
					System.out.println("Intrest Already Exits");
					return;
				}
				return;
			}
		}
	}

	private static void addnewuser(Scanner sc) {
		System.out.println("Enter User Name: ");
		String username = sc.nextLine();
		for(User temp:database)
		{
			if(temp.name.equalsIgnoreCase(username))
			{
				System.out.println("User Already Exits");
				return;
			}
		}
		database.add(new User(username));
	}
}

